<Page x:Class="AdBlock.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdBlock"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdBlock - Home">

    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="Packets"/>
        <Label Grid.Column="0" Grid.Row="1" Content="Blocked" />
        <Label Grid.Column="0" Grid.Row="2" Content="HTTP" />
        <Label Grid.Column="1" Grid.Row="0" Content="---" x:Name="PacketsLabel" />
        <Label Grid.Column="1" Grid.Row="1" Content="---" x:Name="BlockedLabel" />
        <Label Grid.Column="1" Grid.Row="2" Content="---" x:Name="HTTPLabel" />
    </Grid>
</Page>
